{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2018", "es2017", "es7", "es6", "dom"],
    "declaration": true,
    "declarationDir": "dist",
    "outDir": "dist",
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec*"
  ]
}
